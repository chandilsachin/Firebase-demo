<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sachinchandil.firebasehandson">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity android:name="com.sachinchandil.firebasehandson.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sachinchandil.firebasehandson.FirebaseLoginActivity"
            android:label="@string/login"/>
        <activity android:name="com.sachinchandil.firebasehandson.CloudDatabaseActivity"
            android:label="@string/profile"></activity>

    </application>
</manifest>
